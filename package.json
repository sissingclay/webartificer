{
    "name": "web_artificer",
    "version": "1.0.0",
    "scripts": {
        "browser-sync": "browser-sync start --server 'public' --files 'public'",
        "sass": "sass --watch src/scss/styles.scss:public/css/styles.css",
        "postcss": "postcss -w public/css/styles.css --use autoprefixer -o public/css/styles.css -m",
        "nunjucks": "nunjucks *.html -w -p src/templates -o public",
        "dev": "npm run sass & npm run nunjucks & npm run browser-sync & npm run postcss",
        "gulp:prod": "gulp build --env=prod"
    },
    "devDependencies": {
        "autoprefixer": "^10.0.1",
        "browser-sync": "^2.26.13",
        "nunjucks": "^3.2.2",
        "nunjucks-cli": "^1.0.0",
        "postcss": "^8.1.4",
        "postcss-cli": "^8.2.0",
        "sass": "^1.28.0",
        "typescript": "^3.8.3"
    },
    "dependencies": {
        "animejs": "^3.1.0"
    }
}
